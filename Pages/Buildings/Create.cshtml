@page
@model RezerwacjeSalAB.Pages.Buildings.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Building</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Building.Name" class="control-label"></label>
                <input asp-for="Building.Name" class="form-control" />
                <span asp-validation-for="Building.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Building.Street" class="control-label"></label>
                <input asp-for="Building.Street" class="form-control" />
                <span asp-validation-for="Building.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Building.BuildingNumber" class="control-label"></label>
                <input asp-for="Building.BuildingNumber" class="form-control" />
                <span asp-validation-for="Building.BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Building.ZipCode" class="control-label"></label>
                <input asp-for="Building.ZipCode" class="form-control" />
                <span asp-validation-for="Building.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Building.City" class="control-label"></label>
                <input asp-for="Building.City" class="form-control" />
                <span asp-validation-for="Building.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rooms</label>
                <select name="roomIds" class="form-control" asp-items="ViewBag.rooms" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
